{% extends "index.twig" %}

{% block content %}

    <h2>Users List</h2>

    <table class="table table-bordered table-hover">
        <tr>
            <th>ID</th>
            <th>Username</th>
            {% if user.id %}
                <th style="width: 10%">Actions</th>
            {% endif %}
        </tr>
        {% for u in items %}
            <tr>
                <td>{{ u.id }}</td>
                <td><a href="{{ uri.base.path }}user/{{ u.id }}">{{ u.username }}</a></td>

                {% if user.id %}
                    <td>Block...</td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>

{% endblock %}
