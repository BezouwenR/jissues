{% extends 'index.twig' %}

{%- block title -%}
    {{ parent() }} | {{ item.title }}
{%- endblock -%}

{% block content %}
    <div class="page-header">
        <h1>{{ item.title }}</h1>
    </div>

    {# Note that using RAW output format here should be safe since the text is the result of a request to GitHub's markdown parser #}
    {{ item.text|raw }}
{% endblock %}
