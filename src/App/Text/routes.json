{
	"page/:alias": {
		"controller": "App\\Text\\Controller\\ViewArticleController",
		"methods": ["GET"]
	},
	"text": {
		"controller": "App\\Text\\Controller\\ListArticlesController",
		"methods": ["GET"]
	},
	"text/add": {
		"controller": "App\\Text\\Controller\\CreateArticleController",
		"methods": ["GET"]
	},
	"text/delete/:id": {
		"controller": "App\\Text\\Controller\\Article\\Delete",
		"rules": {
			"id": "(\\d+)"
		}
	},
	"text/edit/:id": {
		"controller": "App\\Text\\Controller\\EditArticleController",
		"methods": ["GET"],
		"rules": {
			"id": "(\\d+)"
		}
	},
	"text/save": {
		"controller": "App\\Text\\Controller\\Article\\Save",
		"methods": ["POST"]
	}
}
